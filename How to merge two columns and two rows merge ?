 <table border="1">
      <!-- merge rows rowspan="2" merges 2 rows vertically in the first column.// -->
      <tr>
        <td rowspan="2">Merged Columns</td>
        <td>Row 1, Col 2</td>
      </tr>
      <tr>
        <td>Row 2, Col 1</td>
        <td>Row 2, Col 2</td>
      </tr>
    </table>
    <table border="3">
      <!-- merge rows colspan="2" merges 2 cols horizontally in the first row.// -->
      <tr>
        <td colspan="2">Merged Columns Col 1</td>
        <td>Row 1, Col 2</td>
      </tr>
      <tr>
        <td>Row 2, Col 1</td>
        <td>Row 2, Col 2</td>
      </tr>
    </table>
    <table border="2" id="myTable">
      <tr>
        <td rowspan="3" id="cell" colspan="2">Merged</td>
        <td>Row 2, Col 1</td>
        <td>Row 2, Col 2</td>
      </tr>
    </table>
    <script>
      const ceil = document.getElementById("cell");
      console.log("rowspan:", ceil.rowSpan);
      console.log("colspan:", ceil.colSpan);
    </script>
